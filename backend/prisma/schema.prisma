generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  EMAIL
  GOOGLE
  BOTH
}

model User {
  id                 Int          @id @default(autoincrement())
  email              String       @unique
  username           String       @unique
  password           String?      // Optional for Google SSO users
  
  // Google OAuth fields
  googleId           String?      @unique
  authProvider       AuthProvider @default(EMAIL)
  profilePictureUrl  String?
  googleProfileData  Json?
  
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  games              Game[]

  // Indexes for Google authentication performance
  @@index([googleId])
  @@index([email, authProvider])
}

model Game {
  id            Int       @id @default(autoincrement())
  name          String
  description   String?
  // Game details
  date          DateTime?
  venue         String?
  event         String?
  round         String?
  // Player information
  whitePlayer   String?
  whiteRating   Int?
  blackPlayer   String?
  blackRating   Int?
  // Game data
  moveHistory   Json
  result        String?   // "1-0", "0-1", "1/2-1/2", "*" (in progress)
  pgn           String?   // Add this line to store the PGN string
  // Relationships
  userId        Int
  user          User      @relation(fields: [userId], references: [id])
  // Audit fields
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Index for filtering
  @@index([userId])
  @@index([whitePlayer])
  @@index([blackPlayer])
  @@index([date])
  @@index([event])
  @@index([venue])
}